{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@env/*": ["apps/timesheet/src/environments/*"],
      "@timesheet/feature-timesheet": [
        "libs/timesheet/feature-timesheet/src/index.ts"
      ],
      "@timesheet/data-access": ["libs/timesheet/data-access/src/index.ts"],
      "@timesheet/ui": ["libs/timesheet/ui/src/index.ts"],
      "@timesheet/utilities": ["libs/timesheet/utilities/index.ts"],
      "@data": ["libs/data/src/index.ts"],
      "core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": ["node_modules"]
}
